[status]
	showUntrackedFiles = no
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	rb = rebase --rebase-merges
	mnf = merge --no-ff
	st = status --short --branch
	ca = commit --all
	cam = commit --all -m
	ck = checkout
	dt = diff --word-diff --unified=10
	df = diff --word-diff
[difftool]
	prompt = vimdiff
[diff]
	tool = vimdiff
	algorithm = histogram
[merge]
	tool = vimdiff
[core]
	autocrlf = input
	pager = less -RFX
[color]
	diff = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
	status = auto
[color "status"]
	added = blue

[include]
	path = .gitconfig-user
